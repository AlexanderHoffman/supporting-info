#&EXT_RESTART
#  RESTART_FILE_NAME ZIF8_6CHO-1.restart
#&END EXT_RESTART

&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  METHOD QS

  &DFT
    BASIS_SET_FILE_NAME cp2k/data_files/BASIS_SETS
    POTENTIAL_FILE_NAME cp2k/data_files/GTH_POTENTIALS

    CHARGE 0

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-10
    &END QS

    &MGRID
        CUTOFF 600
        COMMENSURATE TRUE
        NGRIDS 5
    &END MGRID

    &XC
      &XC_FUNCTIONAL PBE
        &PBE
          PARAMETRIZATION ORIG
        &END PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3(BJ)
          PARAMETER_FILE_NAME cp2k/data_files/dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC

    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS RESTART
      MAX_SCF 25
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-5
        MAX_SCF 10
      &END OUTER_SCF
      &PRINT
        &RESTART
          ADD_LAST SYMBOLIC
          &EACH
            MD  100
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
  &END DFT

  &SUBSYS
    &TOPOLOGY
      COORD_FILE_NAME ZIF8_6CHO.xyz
      COORD_FILE_FORMAT XYZ
    &END TOPOLOGY

    &CELL
      PERIODIC XYZ
      ABC 17.1360951499 17.1360951499 17.1360951499
      ANGLES 90.0000 90.0000 90.0000
      &CELL_REF
        PERIODIC XYZ
        ABC 17.1360951499 17.1360951499 17.1360951499
        ANGLES 90.0000 90.0000 90.0000
      &END CELL_REF
    &END CELL

    &KIND C
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND

    &KIND N
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND

    &KIND Zn
      BASIS_SET TZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q12
    &END KIND

    &KIND H
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND

    &KIND O
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT ZIF8_6CHO
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &PRINT
    &TRAJECTORY
      FORMAT XYZ
      &EACH
       MD 2                     
      &END EACH
    &END TRAJECTORY
    &RESTART
       ADD_LAST SYMBOLIC
    &END RESTART
    &RESTART_HISTORY
      &EACH
        MD  2000                   
      &END EACH
    &END RESTART_HISTORY
    &CELL ON
      &EACH
        MD 2
      &END EACH
    &END CELL
    &VELOCITIES ON
      &EACH
        MD 2
      &END EACH        
    &END VELOCITIES
  &END PRINT
  &MD
    ENSEMBLE NVT          
    STEPS 50000                     
    TIMESTEP 0.5                    
    TEMPERATURE 300
    &THERMOSTAT
      TYPE NOSE                     
      REGION GLOBAL                 
      &NOSE
        LENGTH 5                     
        YOSHIDA 3                    
        TIMECON 100  
        MTS 2                      
      &END NOSE
    &END THERMOSTAT
    &BAROSTAT
      PRESSURE 1
      TIMECON 1000    
    &END BAROSTAT
    &PRINT
      FORCE_LAST
    &END PRINT
  &END MD
&END MOTION

