&FORCE_EVAL
  METHOD QS

  &DFT
    BASIS_SET_FILE_NAME cp2k/data_files/BASIS_SETS
    POTENTIAL_FILE_NAME cp2k/data_files/GTH_POTENTIALS

    CHARGE 0

    &PRINT
      &MOMENTS
        FILENAME =moments.dat
        REFERENCE COAC
      &END MOMENTS
    &END PRINT

    &PERIODIC_EFIELD
      INTENSITY 5.000000e-04
      POLARISATION 0.0 1.0 0.0
    &END PERIODIC_EFIELD

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-10
    &END QS

    &MGRID
        CUTOFF 600
        COMMENSURATE TRUE
        NGRIDS 5
    &END MGRID

    &XC
      &XC_FUNCTIONAL PBE
        &PBE
          PARAMETRIZATION ORIG
        &END PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3(BJ)
          PARAMETER_FILE_NAME cp2k/data_files/dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC

    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS RESTART
      MAX_SCF 25
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-5
        MAX_SCF 10
      &END OUTER_SCF
      &PRINT
        &RESTART
          ADD_LAST SYMBOLIC
          &EACH
            MD  100
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
  &END DFT

  &SUBSYS
    &TOPOLOGY
      COORD_FILE_NAME ZIF8_6CHO.xyz
      COORD_FILE_FORMAT XYZ
    &END TOPOLOGY

    &CELL
      PERIODIC XYZ
      ABC 17.1360951499 17.1360951499 17.1360951499
      ANGLES 90.0000 90.0000 90.0000
      &CELL_REF
        PERIODIC XYZ
        ABC 17.1360951499 17.1360951499 17.1360951499
        ANGLES 90.0000 90.0000 90.0000
      &END CELL_REF
    &END CELL

    &KIND C
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND

    &KIND N
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND

    &KIND Zn
      BASIS_SET TZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q12
    &END KIND

    &KIND H
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND

    &KIND O
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT ZIF8_6CHO
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE REFTRAJ         
    STEPS 25000                      
    TIMESTEP 1.0     
    &REFTRAJ
      FIRST_SNAPSHOT 5000
      LAST_SNAPSHOT 25001
      EVAL_ENERGY_FORCES
      TRAJ_FILE_NAME ZIF8_6CHO_traj.xyz
      STRIDE 2
    &END REFTRAJ               
  &END MD
&END MOTION

