#&EXT_RESTART
#  RESTART_FILE_NAME nvt-1.restart
#&END EXT_RESTART

&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  METHOD QS
  &DFT
    BASIS_SET_FILE_NAME /data/gent/vo/000/gvo00003/vsc41949/work/cp2k/data_files/BASIS_SETS
    POTENTIAL_FILE_NAME /data/gent/vo/000/gvo00003/vsc41949/work/cp2k/data_files/GTH_POTENTIALS
    CHARGE 0                                   
    &QS
      METHOD GPW                                                                                  
      EPS_DEFAULT 1.0E-10                     
      EPS_GVG 1.0E-6                           
      EPS_PGF_ORB 1.0E-6                       
    &END QS
    &XC
      &XC_FUNCTIONAL PBE
        &PBE
          PARAMETRIZATION REVPBE               
        &END PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL          
        &PAIR_POTENTIAL
          TYPE DFTD3                           
          PARAMETER_FILE_NAME /data/gent/vo/000/gvo00003/vsc41949/work/cp2k/data_files/dftd3.dat
          REFERENCE_FUNCTIONAL revPBE           
      &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC
    &SCF
      EPS_SCF 1.0E-6                         
      SCF_GUESS RESTART                      
      MAX_SCF 200                            
      &OT
        MINIMIZER DIIS                       
        PRECONDITIONER FULL_SINGLE_INVERSE   
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-5                       
        MAX_SCF 50                           
      &END OUTER_SCF
      &PRINT
        &RESTART
          ADD_LAST SYMBOLIC
          &EACH
            MD  100
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
    &MGRID
        CUTOFF 400                           
        COMMENSURATE TRUE
        NGRIDS 5                     
    &END MGRID
  &END DFT
  &SUBSYS
    &TOPOLOGY
      COORD_FILE_NAME CHA-2BAS-heptaene-init-npt.xyz
      COORD_FILE_FORMAT XYZ
    &END TOPOLOGY
    &CELL
      PERIODIC XYZ
      ABC 13.74345683 13.81107989 14.89232862
      ALPHA_BETA_GAMMA 90.3629448 89.97699899 119.42782801
    &END CELL
    &KIND C
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND O
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
    &KIND Si
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
    &KIND Al
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PBE-q3
    &END KIND
    &KIND H
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND
    &KIND P
      BASIS_SET DZVP-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND
  &END SUBSYS
&END FORCE_EVAL
&GLOBAL
  PREFERRED_FFT_LIBRARY FFTSG     
  PRINT_LEVEL LOW                 
  PROJECT nvt       
  RUN_TYPE MD                     
&END GLOBAL
&MOTION
  &PRINT
    &TRAJECTORY
      FORMAT XYZ
      &EACH
       MD 2                     
      &END EACH
    &END TRAJECTORY
    &RESTART
       ADD_LAST SYMBOLIC
    &END RESTART
    &RESTART_HISTORY
      &EACH
        MD  2000                   
      &END EACH
    &END RESTART_HISTORY
  &END PRINT
  &MD
    ENSEMBLE NVT          
    STEPS 100000                       
    TIMESTEP 0.5                    
    TEMPERATURE 623
    &THERMOSTAT
      TYPE NOSE                     
      REGION GLOBAL                 
      &NOSE
        LENGTH 5                     
        YOSHIDA 3                    
        TIMECON [wavenumber_t] 100  
        MTS 2                      
      &END NOSE
    &END THERMOSTAT
    &BAROSTAT
      PRESSURE [atm] 1
      TIMECON  [wavenumber_t] 100    
    &END BAROSTAT
    &PRINT
      FORCE_LAST
    &END PRINT
  &END MD
&END MOTION

