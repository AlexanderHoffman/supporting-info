&EXT_RESTART
  RESTART_FILE_NAME SSZ13-1.restart
&END EXT_RESTART

&FORCE_EVAL
  STRESS_TENSOR ANALYTICAL
  METHOD QS

  &DFT
    BASIS_SET_FILE_NAME /dodrio/scratch/users/vsc41949/bin/cp2k_data_files/BASIS_SETS
    POTENTIAL_FILE_NAME /dodrio/scratch/users/vsc41949/bin/cp2k_data_files/GTH_POTENTIALS

    CHARGE 0

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-10
    &END QS

    &MGRID
        CUTOFF 1000
        REL_CUTOFF 60
        NGRIDS 5
    &END MGRID

    &XC
      &XC_FUNCTIONAL PBE
        &PBE
          PARAMETRIZATION ORIG
        &END PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3(BJ)
          PARAMETER_FILE_NAME /dodrio/scratch/users/vsc41949/bin/cp2k_data_files/dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC

    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS RESTART
      MAX_SCF 25
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 5
      &END OUTER_SCF
      &PRINT
        &RESTART
          ADD_LAST SYMBOLIC
          &EACH
            MD 100
            GEO_OPT 100
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
  &END DFT

  &SUBSYS
    &TOPOLOGY
      COORD_FILE_NAME SSZ13_2BAS.xyz
      COORD_FILE_FORMAT XYZ
    &END TOPOLOGY

    &CELL
      PERIODIC XYZ
      A   13.738184    -0.009137    -0.013019 
      B   -6.903244    11.896314     0.008240 
      C   -0.001225    -0.026885    14.990754
    &END CELL

    &KIND O
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND

    &KIND C
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND

    &KIND H
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND

    &KIND Al
      BASIS_SET TZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q3
    &END KIND

    &KIND Si
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL LOW
  PROJECT SSZ13
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &PRINT
    &TRAJECTORY
      FORMAT XYZ
      &EACH
       MD 1
      &END EACH
    &END TRAJECTORY
    &RESTART
       ADD_LAST SYMBOLIC
    &END RESTART
    &RESTART_HISTORY
      &EACH
        MD 10000
        GEO_OPT 200
      &END EACH
    &END RESTART_HISTORY
  &END PRINT
  &GEO_OPT
    OPTIMIZER  CG
    TYPE  MINIMIZATION
    MAX_ITER  500
  &END GEO_OPT
  &MD
    ENSEMBLE NVT
    STEPS 10000
    TIMESTEP 0.5
    TEMPERATURE 300
    &THERMOSTAT
      TYPE NOSE
      REGION GLOBAL
      &NOSE
        LENGTH 5
        YOSHIDA 3
        TIMECON 100
        MTS 2
      &END NOSE
    &END THERMOSTAT
    &BAROSTAT
      PRESSURE 1
      TIMECON 1000
    &END BAROSTAT
    &PRINT
      FORCE_LAST
    &END PRINT
  &END MD
&END MOTION

