&FORCE_EVAL
  METHOD QS

  &DFT
    BASIS_SET_FILE_NAME /data/gent/vo/000/gvo00003/vsc41949/work/cp2k/data_files/BASIS_SETS
    POTENTIAL_FILE_NAME /data/gent/vo/000/gvo00003/vsc41949/work/cp2k/data_files/GTH_POTENTIALS

    CHARGE 0

    &PERIODIC_EFIELD
      INTENSITY 5.000000e-04
      POLARISATION 1.0 0.0 0.0
    &END PERIODIC_EFIELD

    &PRINT
      &MOMENTS
        FILENAME =moments.dat
        REFERENCE COAC
      &END MOMENTS
    &END PRINT

    &QS
      METHOD GPW
      EPS_DEFAULT 1.0E-10
    &END QS

    &MGRID
        CUTOFF 1000
        REL_CUTOFF 60
        NGRIDS 5
    &END MGRID

    &XC
      &XC_FUNCTIONAL PBE
        &PBE
          PARAMETRIZATION ORIG
        &END PBE
      &END XC_FUNCTIONAL
      &VDW_POTENTIAL
        POTENTIAL_TYPE PAIR_POTENTIAL
        &PAIR_POTENTIAL
          TYPE DFTD3(BJ)
          PARAMETER_FILE_NAME /data/gent/vo/000/gvo00003/vsc41949/work/cp2k/data_files/dftd3.dat
          REFERENCE_FUNCTIONAL PBE
        &END PAIR_POTENTIAL
      &END VDW_POTENTIAL
    &END XC

    &SCF
      EPS_SCF 1.0E-6
      SCF_GUESS RESTART
      MAX_SCF 25
      &OT
        MINIMIZER DIIS
        PRECONDITIONER FULL_SINGLE_INVERSE
      &END OT
      &OUTER_SCF
        EPS_SCF 1.0E-6
        MAX_SCF 5
      &END OUTER_SCF
      &PRINT
        &RESTART
          ADD_LAST SYMBOLIC
          &EACH
            MD 100
          &END EACH
        &END RESTART
      &END PRINT
    &END SCF
  &END DFT

  &SUBSYS
    &TOPOLOGY
      COORD_FILE_NAME DUT8Zn-lp-nvt.xyz
      COORD_FILE_FORMAT XYZ
    &END TOPOLOGY

    &CELL
      PERIODIC XYZ
      A  18.757619    -0.000145    -0.318682
      B  -0.005615    18.589017    -0.120934
      C  -1.378203    -0.061213     9.459907
    &END CELL

    &KIND C
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q4
    &END KIND

    &KIND N
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q5
    &END KIND

    &KIND Zn
      BASIS_SET TZVP-MOLOPT-SR-GTH
      POTENTIAL GTH-PBE-q12
    &END KIND

    &KIND H
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q1
    &END KIND

    &KIND O
      BASIS_SET TZVP-MOLOPT-GTH
      POTENTIAL GTH-PBE-q6
    &END KIND
  &END SUBSYS
&END FORCE_EVAL

&GLOBAL
  PRINT_LEVEL MEDIUM
  PROJECT DUT8Zn-lp-Ex
  RUN_TYPE MD
&END GLOBAL

&MOTION
  &MD
    ENSEMBLE REFTRAJ       
    STEPS 40000                       
    TIMESTEP 0.5                    
    &REFTRAJ
      FIRST_SNAPSHOT 14960
      LAST_SNAPSHOT 15010
      EVAL_ENERGY_FORCES
      TRAJ_FILE_NAME DUT8Zn-lp-nvt.xyz
      STRIDE 4
    &END REFTRAJ
  &END MD
&END MOTION

